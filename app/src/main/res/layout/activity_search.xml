<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_node_viewer"
        android:layout_width="218dp"
        android:layout_height="665dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/selected_search_node_viewer"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0.333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" >

    </androidx.recyclerview.widget.RecyclerView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_search_node_viewer"
        android:layout_width="177dp"
        android:layout_height="665dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintTop_toBottomOf="@+id/search"/>

    <SearchView
        android:id="@+id/search"
        android:layout_width="250dp"
        android:layout_height="42dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </SearchView>

    <Button
        android:id="@+id/clearAllBtn"
        android:layout_width="100dp"
        android:layout_height="42dp"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintEnd_toStartOf="@+id/filterImage"
        android:onClick="onResetClick"
        android:text="Clear All" />

    <ImageView
        android:id="@+id/filterImage"
        android:layout_width="36dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:contentDescription="an image to indicate to user to filter items by kind"
        android:onClick="onFilterClick"
        app:layout_constraintBottom_toBottomOf="@+id/search"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.36"
        app:layout_constraintStart_toEndOf="@+id/clearAllBtn"
        app:layout_constraintTop_toTopOf="@+id/search"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

</androidx.constraintlayout.widget.ConstraintLayout>
